{
    "openapi": "3.0.0",
    "info": {
        "title": "Frases Célebres API",
        "description": "API sobre frases célebres y motivadoras en castellano. Contiene categoria y autores.",
        "contact": {
            "email": "esmeldyfm@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Acceso"
                ],
                "summary": "Registrar nuevo usuario",
                "operationId": "8a56853624e025573120a09a4c75d468",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Nombre de usuario",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Correo electrónico",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Contraseña",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario registrado correctamente"
                    },
                    "401": {
                        "description": "Error de validación de datos"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Acceso"
                ],
                "summary": "Login de usuarios",
                "description": "Login con datos de usuarios registrados previamente.",
                "operationId": "a3b306d14572d1f4bd6c064b3233e7b8",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Correo electrónico",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "info@jose.com"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Contraseña",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Jose1234"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario logueado correctamente"
                    },
                    "401": {
                        "description": "No autorizado."
                    }
                }
            }
        },
        "/api/logout": {
            "get": {
                "tags": [
                    "Acceso"
                ],
                "summary": "Cerrar sessión de usuario",
                "operationId": "3f19b742e4ead13f81ba0d6c0d46ac1b",
                "responses": {
                    "200": {
                        "description": "Sessión cerrada correctamente",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/autores": {
            "get": {
                "tags": [
                    "Autores"
                ],
                "summary": "Obtiene una lista de autores",
                "operationId": "7be9b6c1d75ee24b24e9bd54ab6edca9",
                "responses": {
                    "200": {
                        "description": "Lista de autores",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "400": {
                        "description": "Solicitud incorrecta"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Autores"
                ],
                "summary": "Crea un nuevo autor",
                "operationId": "cb8a5d3147c0ab13a31519bc7ec9770d",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "nombre": {
                                        "description": "Nombre del autor",
                                        "type": "string",
                                        "example": "Gabriel"
                                    },
                                    "apellidos": {
                                        "description": "Apellidos del autor",
                                        "type": "string",
                                        "example": "García Márquez"
                                    },
                                    "descripcion": {
                                        "description": "Descripción del autor",
                                        "type": "string",
                                        "example": "Escritor colombiano, autor de 'Cien años de soledad'."
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Respuesta exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "oneOf": [
                                        {
                                            "properties": {
                                                "message": {
                                                    "type": "string",
                                                    "example": "Autor creado correctamente"
                                                },
                                                "autor": {}
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "properties": {
                                                "error": {
                                                    "type": "string",
                                                    "example": "El autor ya se encuentra en la base de datos"
                                                },
                                                "autor": {}
                                            },
                                            "type": "object"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Faltan campos por rellenar o algo ha ido mal",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Faltan campos por rellenar"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/autores/{id}": {
            "get": {
                "tags": [
                    "Autores"
                ],
                "summary": "Muestra un autor específico",
                "operationId": "f31326c5a412ba2ed90a44f814a5d125",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del autor",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalles del autor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "autor": {}
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Autor no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Autor no encontrado"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "Autores"
                ],
                "summary": "Actualiza un autor existente",
                "operationId": "fe8ae34e54ea1a9aa5f10678cd0928c1",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del autor",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "nombre": {
                                        "description": "Nombre del autor",
                                        "type": "string",
                                        "example": "Gabriel"
                                    },
                                    "apellidos": {
                                        "description": "Apellidos del autor",
                                        "type": "string",
                                        "example": "García Márquez"
                                    },
                                    "descripcion": {
                                        "description": "Descripción del autor",
                                        "type": "string",
                                        "example": "Escritor colombiano, autor de 'Cien años de soledad'."
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Autor actualizado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Autor actualizado correctamente"
                                        },
                                        "autor": {}
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Autor no encontrado o campos vacíos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Autor no encontrado"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Autores"
                ],
                "summary": "Elimina un autor existente",
                "operationId": "e8969c280b9a711f53e152fe7e5ceec2",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del autor",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Autor borrado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Autor borrado correctamente"
                                        },
                                        "autor": {}
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Autor no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Autor no encontrado"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "bearerAuth",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Acceso",
            "description": "Endpoints de acceso"
        },
        {
            "name": "Frases",
            "description": "Endpoints de frases"
        },
        {
            "name": "Autores",
            "description": "Endpoints de autores"
        },
        {
            "name": "Categorias",
            "description": "Endpoints de categorias"
        }
    ]
}